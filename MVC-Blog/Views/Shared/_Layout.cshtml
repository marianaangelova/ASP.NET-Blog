<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Блог</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div>
        <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Блог", "Blog", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Начало", "Index", "Home")</li>
                    <li>@Html.ActionLink("Статии", "Index", "Posts")</li>
                    <li>@Html.ActionLink("Контакти", "Contacts", "Home")</li>
                    <li>@Html.ActionLink("За нас", "About", "Home")</li>
                    <li>@Html.ActionLink("За нас", "About", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>  
    </div>
    <div class="container body-content">
        @RenderBody()
        <div id="footer" class="navbar navbar-fixed-bottom">
            <hr />
            <footer>
                <div id="nav">
                    <ul>
                        <li>@Html.ActionLink("Начало", "Index", "Home")</li>
                        <li>@Html.ActionLink("Статии", "Index", "Posts")</li>
                        <li>@Html.ActionLink("Контакти", "Contacts", "Home")</li>
                        <li>@Html.ActionLink("За нас", "About", "Home")</li>
                    </ul>
                </div>
                <div id="copyright">
                    <p>© 1998-2015 UEFA. All rights reserved.<br />
                </div>
                <div id="social">
                    <div id="facebook"></div>
                    <div id="google"></div>
                    <div id="twitter"></div>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
