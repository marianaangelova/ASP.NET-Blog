@model MVC_Blog.Models.Post

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Title</h2>

<fieldset>
    <legend><i>Article</i></legend>

    <div class="display-field"></div>
    <div class="display-field">@Html.Raw(Model.Body)</div>

    <div class="display-label">PublishedDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.Date)</div>
</fieldset>

    @if (Model.Comments != null)
    {
        foreach (var comment in Model.Comments)
        {
            <section class="comments">
                <article class="comment">
                    <a class="comment-img" href="#non">
                        <img src="http://lorempixum.com/50/50/people/1" alt="" width="50" height="50">
                    </a>
                    <div class="comment-body">
                        <div class="text">
                            <p>@comment.Text</p>
                        </div>
                        <p class="attribution">by <a href="#non">Joe Bloggs</a> at <i>@comment.Date</i></p>
                    </div>
                </article>
                <article class="comment">
                    <a class="comment-img" href="#non">
                        <img src="http://lorempixum.com/50/50/people/7" alt="" width="50" height="50">
                    </a>
                    <div class="comment-body">
                        <div class="text">
                            <p>This is a much longer one that will go on for a few lines.</p>
                            <p>It has multiple paragraphs and is full of waffle to pad out the comment. Usually, you just wish these sorts of comments would come to an end.</p>
                        </div>
                        <p class="attribution">by <a href="#non">Joe Bloggs</a> at 14:23pm, 4th Dec 2010</p>
                    </div>
                </article>
            </section>
       }
    }

@using (Html.BeginForm("CreateComment", "Posts", new { Post_Id = Model.Id }, FormMethod.Post))
{
    //here is the big ???

    <textarea rows="4" cols="50" class="add-comments" name="Text"></textarea><br/>
    <input type="submit" value="Add Comment" class="btn btn-default" />
    
}


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>